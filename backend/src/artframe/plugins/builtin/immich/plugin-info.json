{
  "id": "immich",
  "display_name": "Immich",
  "class": "Immich",
  "description": "Syncs and displays photos from an Immich album. Downloads all photos locally and keeps them in sync with the server.",
  "author": "Artframe Team",
  "version": "1.0.0",
  "icon": "icon.png",
  "settings_schema": {
    "sections": [
      {
        "title": "Immich Server",
        "fields": [
          {
            "key": "immich_url",
            "type": "url",
            "label": "Server URL",
            "placeholder": "https://immich.example.com",
            "required": true,
            "help": "Your Immich server URL"
          },
          {
            "key": "immich_api_key",
            "type": "password",
            "label": "API Key",
            "required": true,
            "help": "Get this from Immich Settings → Account Settings → API Keys"
          }
        ]
      },
      {
        "title": "Album",
        "fields": [
          {
            "key": "album_id",
            "type": "string",
            "label": "Album ID",
            "placeholder": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
            "help": "UUID of the album to sync. Leave empty to sync all photos."
          },
          {
            "key": "max_photos",
            "type": "number",
            "label": "Maximum Photos",
            "default": 0,
            "min": 0,
            "max": 10000,
            "help": "Limit number of photos synced (0 = unlimited)"
          }
        ]
      },
      {
        "title": "Display",
        "fields": [
          {
            "key": "selection_mode",
            "type": "select",
            "label": "Photo Selection",
            "default": "random",
            "options": [
              { "value": "random", "label": "Random" },
              { "value": "sequential", "label": "Sequential" },
              { "value": "newest", "label": "Newest First" },
              { "value": "oldest", "label": "Oldest First" }
            ],
            "help": "How to select which photo to display"
          }
        ]
      },
      {
        "title": "Timing",
        "fields": [
          {
            "key": "refresh_interval_minutes",
            "type": "number",
            "label": "Refresh Interval (minutes)",
            "default": 5,
            "min": 1,
            "help": "How often to display a new photo"
          },
          {
            "key": "sync_interval_hours",
            "type": "number",
            "label": "Sync Interval (hours)",
            "default": 6,
            "min": 1,
            "max": 168,
            "help": "How often to check for album changes"
          }
        ]
      }
    ]
  }
}
