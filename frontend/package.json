  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.17",
    "jsdom": "^25.0.1",
    "msw": "^2.6.8",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.4.33",
